%main
  %header
    %h1 EmberJax Chat
    .session
      -if session.isAuthenticated
        Hi, #{currentUser.displayName} (@#{currentUser.username})
        %a.signout(href='#'){action "logout"} Sign Out
      -else
        %a.signin(href='#'){action "login"}
          =fa-icon "github" size=1
          Sign in with Github

  =outlet
